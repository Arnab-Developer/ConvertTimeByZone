@model ConvertTimeByZoneModel
@{
    ViewData["Title"] = "Convert time by zone";
}

<div class="row">
    <div class="col-md-4">
        <form asp-controller="ConvertTimeByZone" asp-action="Convert" method="post">
            <div class="form-group">
                <label asp-for="DateTimeToBeConverted" class="control-label"></label>
                <input asp-for="DateTimeToBeConverted" class="form-control" />
                <span asp-validation-for="DateTimeToBeConverted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SourceTimeZone" class="control-label"></label>
                <select asp-for="SourceTimeZone" asp-items="Model.ZoneListItems"></select>
                <span asp-validation-for="SourceTimeZone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinationTimeZone" class="control-label"></label>
                <select asp-for="DestinationTimeZone" asp-items="Model.ZoneListItems"></select>
                <span asp-validation-for="DestinationTimeZone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Convert" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>